<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_almost">

    <ImageView
        android:id="@+id/iv_slide"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_slide">

    </ImageView>

    <LinearLayout
        android:id="@+id/ll_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_slide"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_create_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wallet"
            android:backgroundTint="@color/black_almost">

        </ImageButton>

        <TextView
            android:id="@+id/tv_create_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Multiversx Wallet"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/revolut" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send_ehr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_create_wallet"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_send_ehr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ehr_filled"
            android:backgroundTint="@color/black_almost">

        </ImageButton>

        <TextView
            android:id="@+id/tv_send_ehr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send your EHR"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/revolut" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>