<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.wallet_account_send_medical_id.SendMedicalIdFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="16dp"
        app:cardCornerRadius="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/black_almost"
        app:strokeColor="@color/black_almost"
        app:strokeWidth="1.20dp"
        android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_wallet_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_wallet_address"
                android:text="EGLD wallet address"
                android:fontFamily="@font/league_spartan_light"
                android:textSize="14sp"
                android:textColor="@color/gray_400">

            </TextView>

            <TextView
                android:id="@+id/tv_wallet_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_wallet_address_title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text=""
                android:textColor="@color/white_almost"
                android:fontFamily="@font/league_spartan_medium"
                android:textSize="17sp">
            </TextView>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_wallet_address"
                app:layout_constraintBottom_toTopOf="@id/tv_wallet_balance_title"
                android:background="@color/semiTransparentColor" />

            <TextView
                android:id="@+id/tv_wallet_balance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintBottom_toTopOf="@id/tv_wallet_balance"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:text="Balance"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan_light"
                android:textColor="@color/gray_400">

            </TextView>

            <TextView
                android:id="@+id/tv_wallet_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_almost"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_wallet_balance_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:textSize="17sp"
                android:text=""
                android:textColor="@color/white_almost"
                android:fontFamily="@font/league_spartan_medium"
                android:maxLines="1"
                android:inputType="text">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_transfer_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_wallet"
        app:layout_constraintBottom_toTopOf="@id/cv_wallet_doctor"
        android:layout_marginTop="32dp"
        android:text="Transfer to"
        android:textSize="17sp"
        android:fontFamily="@font/league_spartan_regular"
        android:layout_marginStart="16dp"
        android:visibility="gone">

    </TextView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_wallet_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_transfer_to"
        app:layout_goneMarginTop="16dp"
        app:cardCornerRadius="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/black_almost"
        app:strokeColor="@color/black_almost"
        app:strokeWidth="1.20dp"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_wallet_doctor_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_wallet_doctor_name"
                android:text="Name"
                android:fontFamily="@font/league_spartan_light"
                android:textSize="14sp"
                android:textColor="@color/gray_400">

            </TextView>

            <TextView
                android:id="@+id/tv_wallet_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_wallet_doctor_name_title"
                app:layout_constraintBottom_toTopOf="@id/view_doctor"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text=""
                android:textColor="@color/white_almost"
                android:fontFamily="@font/league_spartan_medium"
                android:textSize="17sp">
            </TextView>

            <View
                android:id="@+id/view_doctor"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_wallet_doctor_name"
                app:layout_constraintBottom_toTopOf="@id/tv_wallet_doctor_address_title"
                android:background="@color/semiTransparentColor" />

            <TextView
                android:id="@+id/tv_wallet_doctor_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_doctor"
                app:layout_constraintBottom_toTopOf="@id/tv_wallet_doctor_address"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:text="Address"
                android:textSize="14sp"
                android:fontFamily="@font/league_spartan_light"
                android:textColor="@color/gray_400">

            </TextView>

            <TextView
                android:id="@+id/tv_wallet_doctor_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_almost"
                app:layout_constraintTop_toBottomOf="@id/tv_wallet_doctor_address_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textColor="@color/white_almost"
                android:fontFamily="@font/league_spartan_medium"
                android:textSize="17sp">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:textAllCaps="false"
        android:text="Send"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/league_spartan_regular"
        android:background="@drawable/buttons_blue_light_black_borders"
        android:textSize="19sp"
        android:letterSpacing="0.05"
        android:visibility="gone">
    </androidx.appcompat.widget.AppCompatButton>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        android:visibility="gone">

    </ProgressBar>




</androidx.constraintlayout.widget.ConstraintLayout>